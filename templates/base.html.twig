        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        {% block stylesheets %}
        <style>
            :root {
                --primary-color: #4361ee;
                --secondary-color: #3a0ca3;
                --text-light: #f8f9fa;
                --text-dark: #212529;
                --bg-light: #f8f9fa;
                --bg-dark: #212529;
            }
            
            .navbar {
                background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
                padding: 0.5rem 2rem;
                transition: all 0.3s ease;
            }
            
            .navbar.scrolled {
                padding: 0.3rem 2rem;
                backdrop-filter: blur(10px);
                background: rgba(67, 97, 238, 0.9);
            }
            
            .navbar-brand {
                font-weight: 800;
                font-size: 1.8rem;
                letter-spacing: -0.5px;
                background: linear-gradient(to right, #fff 0%, #d1d1d1 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                position: relative;
                padding-left: 2.5rem;
            }
            
            .navbar-brand::before {
                content: "üìñ";
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                font-size: 1.8rem;
                animation: bookTilt 3s infinite ease-in-out;
            }
            
            .nav-link {
                font-weight: 600;
                padding: 0.5rem 1.2rem;
                margin: 0 0.3rem;
                border-radius: 0.5rem;
                transition: all 0.3s ease;
                position: relative;
                color: rgba(255, 255, 255, 0.9) !important;
            }
            
            .nav-link::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                width: 0;
                height: 3px;
                background: white;
                transition: all 0.3s ease;
                transform: translateX(-50%);
                border-radius: 10px;
            }
            
            .nav-link:hover::after {
                width: 70%;
            }
            
            .nav-link.active {
                background: rgba(255, 255, 255, 0.15);
            }
            
            .nav-link.active::after {
                width: 70%;
                background: #ffbe0b;
            }
            
            .btn-theme {
                border: none;
                background: rgba(255, 255, 255, 0.1);
                color: white;
                width: 40px;
                height: 40px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                transition: all 0.3s ease;
                margin-left: 1rem;
            }
            
            .btn-theme:hover {
                background: rgba(255, 255, 255, 0.2);
                transform: rotate(30deg);
            }
            
            .user-avatar {
                width: 36px;
                height: 36px;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.2);
                display: flex;
                align-items: center;
                justify-content: center;
                margin-left: 1rem;
                overflow: hidden;
                border: 2px solid rgba(255, 255, 255, 0.3);
                transition: all 0.3s ease;
            }
            
            .user-avatar:hover {
                transform: scale(1.1);
                border-color: white;
            }
            
            .search-box {
                position: relative;
                margin-right: 1rem;
            }
            
            .search-input {
                background: rgba(255, 255, 255, 0.1);
                border: none;
                border-radius: 50px;
                padding: 0.5rem 1.5rem 0.5rem 3rem;
                color: white;
                width: 200px;
                transition: all 0.3s ease;
            }
            
            .search-input:focus {
                width: 250px;
                background: rgba(255, 255, 255, 0.2);
                box-shadow: none;
                outline: none;
            }
            
            .search-icon {
                position: absolute;
                left: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: rgba(255, 255, 255, 0.7);
            }
            
            @keyframes bookTilt {
                0%, 100% { transform: translateY(-50%) rotate(-5deg); }
                50% { transform: translateY(-50%) rotate(5deg); }
            }
            
            @media (max-width: 992px) {
                .navbar-collapse {
                    padding: 1rem 0;
                }
                
                .nav-item {
                    margin-bottom: 0.5rem;
                }
                
                .search-box {
                    margin: 1rem 0;
                    width: 100%;
                }
                
                .search-input {
                    width: 100% !important;
                }
            }
        </style>
        {% endblock %}
    </head>
    <body>
