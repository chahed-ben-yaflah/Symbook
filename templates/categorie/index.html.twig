{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-4">Liste des Catégories</h1>
            <a href="{{ path('app_categorie_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Créer une nouvelle catégorie
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Libellé</th>
                                <th scope="col">Slug</th>
                                <th scope="col">Description</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for categorie in categories %}
                                <tr>
                                    <th scope="row">{{ categorie.id }}</th>
                                    <td>{{ categorie.libelle }}</td>
                                    <td><span class="badge bg-secondary">{{ categorie.slug }}</span></td>
                                    <td>{{ categorie.description|slice(0, 50) }}{% if categorie.description|length > 50 %}...{% endif %}</td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" 
                                               class="btn btn-sm btn-outline-info" 
                                               title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" 
                                               class="btn btn-sm btn-outline-warning" 
                                               title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                        Aucune catégorie trouvée
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}